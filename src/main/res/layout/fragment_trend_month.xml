<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CalendarActivity"
    android:orientation="vertical"
    android:id="@+id/calendar_view">

    <com.trend.cisc325team3.trend.ViewTrendMonthName
        android:id="@+id/trend_month_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/calendar_month_name_padding"
        android:paddingBottom="@dimen/calendar_month_name_padding"
        android:gravity="center"
        android:textColor="@color/colorTextPrimary"
        android:layout_gravity="center_horizontal" />

    <GridView
        android:id="@+id/trend_days_of_week_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="7"
        android:verticalSpacing="@dimen/calendar_day_spacing"
        android:horizontalSpacing="@dimen/calendar_day_spacing"
        android:stretchMode="columnWidth">

    </GridView>

    <GridView
        android:id="@+id/trend_month_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="7"
        android:verticalSpacing="@dimen/calendar_day_spacing"
        android:horizontalSpacing="@dimen/calendar_day_spacing"
        android:stretchMode="columnWidth">

    </GridView>
</LinearLayout>
