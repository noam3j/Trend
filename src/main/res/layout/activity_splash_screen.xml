<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:svg="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center_vertical"
    tools:context="com.trend.cisc325team3.trend.ActivitySplashScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="center_horizontal">

            <com.trend.cisc325team3.trend.ImageViewSVG
                android:id="@+id/splash_image"
                android:layout_width="0dp"
                android:layout_height="@dimen/splash_image_height"
                android:layout_weight="0.5"
                android:keepScreenOn="true"
                android:layout_gravity="center_horizontal"
                svg:file="@string/splash_image1"
                android:layout_marginBottom="@dimen/splash_image_padding"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="center_horizontal">

            <com.trend.cisc325team3.trend.ImageViewSVG
                android:id="@+id/splash_title"
                android:layout_width="0dp"
                android:layout_height="@dimen/splash_image_height"
                android:layout_weight="0.5"
                android:keepScreenOn="true"
                android:layout_gravity="center"
                svg:file="@string/splash_image2"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
